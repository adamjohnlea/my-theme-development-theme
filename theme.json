{
  "$schema": "https://raw.githubusercontent.com/WordPress/gutenberg/trunk/schemas/json/theme.json",
  "version": 2,
  "settings": {
    "color": {
      "defaultPalette": false,
      "palette" : [
        { "slug": "m-white", "color": "rgb(255 255 255)", "name": "MyTDT White" },
        { "slug": "m-gray-100", "color": "rgb(243 244 246)", "name": "MyTDT Gray 100" },
        { "slug": "m-gray-200", "color": "rgb(229 231 235)", "name": "MyTDT Gray 200" },
        { "slug": "m-gray-300", "color": "rgb(209 213 219)", "name": "MyTDT Gray 300" },
        { "slug": "m-gray-400", "color": "rgb(156 163 175)", "name": "MyTDT Gray 400" },
        { "slug": "m-gray-500", "color": "rgb(107 114 128)", "name": "MyTDT Gray 500" },
        { "slug": "m-gray-600", "color": "rgb(75 85 99)", "name": "MyTDT Gray 600" },
        { "slug": "m-gray-700", "color": "rgb(55 65 81)", "name": "MyTDT Gray 700" },
        { "slug": "m-gray-800", "color": "rgb(31 41 55)", "name": "MyTDT Gray 800" },
        { "slug": "m-gray-900", "color": "rgb(17 24 39)", "name": "MyTDT Gray 900" },
        { "slug": "m-primary", "color": "rgb(239 68 68)", "name": "MyTDT Primary" },
        { "slug": "m-accent", "color": "rgb(67 56 202)", "name": "MyTDT Accent" },
        { "slug": "m-success", "color": "rgb(52 211 153)", "name": "MyTDT Success" },
        { "slug": "m-info", "color": "rgb(96 165 250)", "name": "MyTDT Info" },
        { "slug": "m-warning", "color": "rgb(251 146 60)", "name": "MyTDT Warning" },
        { "slug": "m-danger", "color": "rgb(255 14 14)", "name": "MyTDT Danger" }
      ],
      "background": true,
      "text": true,
      "link": true,
      "custom": true,
      "defaultDuotone": false,
      "defaultGradients": false
    },
    "blocks": {
      "core/site-title": {
        "color": {
          "defaultPalette": true,
          "palette": [
            { "slug": "m-primary", "color": "rgb(239 68 68)", "name": "MyTDT Primary" }
          ],
          "link": true,
          "gradients": [],
          "customGradient": false
        },
        "typography": {
          "fontFamilies": [
            { "fontFamily": "Pacifico, sans-serif", "slug": "m-pacifico", "name": "MyTDT Pacifico" }
          ]
        }
      },
      "core/preformatted": {
        "typography": {
          "fontSizes": [],
          "customFontSize": false
        }
      }
    },
    "border": {
      "color": true,
      "radius": true,
      "style": true,
      "width": true
    },
    "typography": {
      "fontFamilies": [
        { "fontFamily": "Rubik, sans-serif", "slug": "m-rubik", "name": "MyTDT Rubik" }
      ],
      "fontSizes": [
        { "slug": "small", "size": "0.75rem", "name": "Small" },
        { "slug": "medium", "size": "1.25rem", "name": "Medium" },
        { "slug": "large", "size": "2.25rem", "name": "Large" },
        { "slug": "x-large", "size": "3rem", "name": "Extra Large" },
        { "slug": "huge", "size": "3.75rem", "name": "Huge!" }
      ]
    }
  },
  "styles": {
    "color": {
      "text": "var(--wp--preset--color--m-gray-700)",
      "background": "var(--wp--preset--color--m-white)"
      },
    "elements": {
      "link": {
        "color": {
          "text": "var(--wp--preset--color--m-primary)"
        }
      }
    },
    "blocks" : {
      "core/button" : {
      },
      "core/pullquote": {
        "border": {
          "width": "2px",
          "radius": "10px",
          "style": "solid",
          "color": "var(--wp--preset--color--m-primary)"
        }
      }
    }
  }
}
